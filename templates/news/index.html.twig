{% extends 'base.html.twig' %}

{% block title %}Meczyki.pl{% endblock %}

{% block body %}
<style>
    .container{ margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .authors { font-size: small; }
</style>

<div class="container">
    <section id="news">
        {% for key, article in all_news %}
            <h2>{{ article.title }}</h2>
            <p class="authors"><b>Authors:</b>
                {% for writer in article.author %}
                    {{ writer.name }}
                {% endfor %}
                <b>Created at:</b> {{ article.createdAt.format('Y-m-d h:m') }}
            </p>
            <p>{{ article.text }}</p>
            <hr>
        {% endfor %}
    </section>
</div>
{% endblock %}
