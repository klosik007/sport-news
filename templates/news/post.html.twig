{% extends 'base.html.twig' %}

{% block title %}Meczyki.pl{% endblock %}

{% block body %}
    <style>
        .container{ margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    </style>

    <div class="container">
        {% if path('update_news', {id: news_data.id}) %}
            <h2>Edit article</h2>
        {% else %}
            <h2>Add article</h2>
        {% endif %}
        <form action="" method="post" id="updateNews">
            <label for="news_title">
                Title<input type="text" name="news_title" id="news_title" value="{{ news_data.title }}" />
            </label>
            <br>
            <label for="news_text">Content</label>
            <br>
            <textarea name="news_text" id="news_text">
                {{ news_data.text }}
            </textarea>
            <br>
            <button type="submit" class="btn btn-block btn-danger">
                {% if path('update_news', {id: news_data.id}) %}
                    Edit Post
                {% else %}
                    Add Post
                {% endif %}
            </button>
        </form>
    </div>
{% endblock %}